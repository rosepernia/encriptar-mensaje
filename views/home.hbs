  <!-- CUERPO DEL EJERCICIO -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
         
            Escribe tu mensaje:
            <input type="text" name="texto" id="texto">
            
        </div>
       
      </div>
        
      <div class="row">
        <input type="button" class="btn btn-info" id="boton" value="Encriptar mensaje"><br>    
        <div class="col-12 resultado" >
          Mensaje encriptado:
        </div>
      </div>
      <div class="row">
        <input type="button" class="btn btn-info" id="botonDos" value="Desencriptar mensaje">
        <div class="col-12 resultadoDos" >
          Mensaje desencriptado:
        </div>

      <div class="col-12 d-flex justify-content-center align-items-center">
         
          
            <a href="./"><input type="button" class="btn btn-success" id="botonTres" value="Prueba otra vez"></a>
            
        </div>
    </div>
  </main>
{{!--Aquí va código javascript para esta página --}}  
<script>

  document.querySelector("#boton").onclick=()=>{
    let texto=document.querySelector("#texto")
    fetch('/mensajes/procesar',
    {
      method: 'POST',
      body: JSON.stringify({mensaje:texto.value}),
      headers: {'Content-type':'application/json'}
    })
    .then(res=>res.json())
    .then(datos=>
      document.querySelector(".resultado").innerHTML=datos.mensaje
    )
  }
  document.querySelector("#botonDos").onclick=()=>{
    let texto=document.querySelector(".resultado")
    fetch('/mensajes/desencriptar',
    {
      method: 'POST',
      body: JSON.stringify({mensaje:texto.textContent}),
      headers: {'Content-type':'application/json'}
    })
    .then(res=>res.json())
    .then(datos=>
      document.querySelector(".resultadoDos").innerHTML=datos.mensaje
    )
  }


</script>


